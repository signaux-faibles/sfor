<div class="fr-mb-3w">
  Filtres actifs : <%= active_filter_tags(params) %>
</div>
<div class="fr-table--lg fr-table fr-table" id="table-lg-component">
  <div class="fr-table__wrapper">
    <div class="fr-table__container">
      <div class="fr-table__content">
        <table id="table-lg">
          <caption>
            Entreprises détectées
          </caption>
          <thead>
          <tr>
            <th scope="col">Siren</th>
            <th scope="col">Raison sociale</th>
            <th scope="col">Département</th>
            <th scope="col">Effectif</th>
            <th scope="col">Actions</th>
          </tr>
          </thead>

          <tbody>
          <% @companies.each do |company| %>
            <tr>
              <td><%= company.siren %></td>
              <td><%= company.raison_sociale %></td>
              <td><%= "#{company.department.name} (#{company.department.code})" %></td>
              <td><%= company.effectif %></td>
              <td><%= link_to 'Voir', company %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>