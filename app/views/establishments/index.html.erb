<div class="fr-container--fluid">
  <div class="fr-grid-row">
    <div class="fr-col-3"></div>
    <div class="fr-col-6">
      <div class="fr-grid-row fr-grid-row--gutters">
        <div class="fr-col-4">
          <%= form_with(url: establishments_path, method: :get, data: { controller: 'submit-on-change' }) do |f| %>
            <%= f.label :campaign_id, 'Choisir une campagne', class: 'fr-label' %>
            <%= f.select :campaign_id, options_for_select([['Toutes les campagnes', nil]] + Campaign.all.map { |c| [c.name, c.id] }, params[:campaign_id]), {}, {class: 'fr-select', data: { 'submit-on-change-target': 'select' }} %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="fr-col-3"></div>
  </div>
</div>
<div class="fr-container--fluid">
  <div class="fr-grid-row">
    <div class="fr-col-3">
      <%= render 'filters' %>
    </div>
    <div class="fr-col-6">
      <div class="fr-grid-row fr-grid-row--center">
        <div class="fr-col-12">
          <div class="fr-table fr-table--bordered fr-mt-4w">
            <%= render 'establishments_table' %>
          </div>
        </div>
      </div>
    </div>
    <div class="fr-col-3"></div>
  </div>
</div>




