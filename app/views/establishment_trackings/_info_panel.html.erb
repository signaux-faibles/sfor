<!-- Establishment Information Panel -->
<div id="tabpanel-informations-panel"
     class="fr-tabs__panel fr-tabs__panel--selected"
     role="tabpanel"
     aria-labelledby="tabpanel-informations"
     tabindex="0">
  <div>
    <div class="fr-grid-row fr-grid-row--gutters">
      <div class="fr-col-6">
        <%= render(TrackingInfoComponent.new(establishment_tracking: @establishment_tracking, establishment: @establishment_tracking.establishment, current_user: current_user)) %>

        <div>
          <div class="accompagnement__tab-title">
            <h3>Informations sur l'établissement
              <% if policy(@establishment_tracking).edit? %>
                <%= link_to 'Modifier les informations', edit_establishment_establishment_tracking_path(@establishment, @establishment_tracking), class: 'fr-btn fr-btn--secondary fr-btn--icon-left fr-icon-edit-line fr-mb-2w' %>
              <% end %>
            </h3>
          </div>
          <p><strong>SIRET :</strong> <%= @establishment_tracking.establishment.siret %></p>
          <p><strong>Taille de l'entreprise
            :</strong> <%= @establishment_tracking.size&.name || 'Non renseigné' %>
            <button class="fr-btn--tooltip fr-btn" type="button" id="button-tracking-info-size" aria-describedby="button-tracking-info-size">
              <span class="fr-icon-information-line" aria-hidden="true"></span>
              <span class="fr-sr-only">Information sur la taille de l'entreprise</span>
            </button>
          </p>
          <span class="fr-tooltip fr-placement" id="button-tracking-info-size" role="tooltip" aria-hidden="true">
            La "taille de l'entreprise" indique la taille (par effectif et Chiffre d'affaires) du groupement auquel se rattache l'entreprise. Les statiques par "taille" permettent d'identifier les typologies d'entreprises accompagnées (filiale de groupe, PME, etc.). Retrouvez les définitions des "tailles" dans le guide utilisateur.
          </span>
          <p><strong>Filières :</strong>
            <% if @establishment_tracking.sectors.any? %>
              <%= @establishment_tracking.sectors.map(&:name).join(', ') %>
            <% else %>
              Non renseigné
            <% end %>
            <button class="fr-btn--tooltip fr-btn" type="button" id="button-tracking-info-sectors" aria-describedby="button-tracking-info-sectors">
              <span class="fr-icon-information-line" aria-hidden="true"></span>
              <span class="fr-sr-only">Information sur les filières</span>
            </button>
          </p>
          <span class="fr-tooltip fr-placement" id="button-tracking-info-sectors" role="tooltip" aria-hidden="true">
            La "filière" indique la filière économique ou chaîne de valeur dans laquelle s'inscrit l'entreprise. Différente du code NAF qui définit le secteur d'activité. Les statistiques par "filière" permettent d'identifier les segments de l'économie fragilisés au niveau local et national.
          </span>
        </div>

        <%= render 'establishment_trackings/info_panel/contacts_list', establishment: @establishment, establishment_tracking: @establishment_tracking %>

        <%= render 'establishment_trackings/info_panel/tracking_history' %>
      </div>

      <div class="fr-col-6">
        <%= render ContributorsInfoComponent.new(establishment_tracking: @establishment_tracking, establishment: @establishment, current_user: current_user) %>
      </div>
    </div>

    <%= render 'establishment_trackings/info_panel/company_trackings' %>
  </div>
</div>