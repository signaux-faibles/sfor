<div class="fr-container--fluid">
  <nav role="navigation" class="fr-ml-4w fr-breadcrumb" aria-label="vous êtes ici :">
    <button class="fr-breadcrumb__button" aria-expanded="false" aria-controls="breadcrumb-1">
      Voir le fil d’Ariane
    </button>
    <div class="fr-collapse" id="breadcrumb-1">
      <ol class="fr-breadcrumb__list">
        <li>
          <%= link_to 'Accompagnements', establishment_trackings_path, class: 'fr-breadcrumb__link' %>
        </li>
        <li>
          <a class="fr-breadcrumb__link" aria-current="page">
            <%= @establishment_tracking.establishment.raison_sociale %>
          </a>
        </li>
      </ol>
    </div>
  </nav>
  <div class="fr-pl-4w fr-pb-4w fr-pt-4w custom-background" style="display: flex; align-items: center; gap: 8px;">
    <h1 style="margin: 0;">Accompagnement - <%= @establishment_tracking.establishment.raison_sociale %></h1>
    <ul class="fr-badges-group fr-pt-1w">
      <li>
        <%= content_tag :p, @establishment_tracking.aasm.human_state, class: badge_class_for(@establishment_tracking.aasm.human_state) %>
      </li>
      <li>
        <% if @establishment_tracking.criticality.present? %>
          <%= content_tag :p, @establishment_tracking.criticality.name, { class: badge_class_for(@establishment_tracking.criticality.name), style: paragraph_style_for(@establishment_tracking.criticality.name) } %>
        <% end %>
      </li>
    </ul>
  </div>
  <div class="fr-tabs">
    <ul class="fr-tabs__list custom-background fr-pb-0" role="tablist" aria-label="Gestion des onglets">
      <!-- Establishment Information Tab -->
      <li role="presentation">
        <button id="tabpanel-informations"
                class="fr-tabs__tab fr-icon-information-line fr-tabs__tab--icon-left"
                tabindex="0" role="tab"
                aria-selected="true"
                aria-controls="tabpanel-informations-panel">
          Informations
        </button>
      </li>

      <!-- User Networks Tabs -->
      <% current_user.active_networks.each do |network| %>
        <li role="presentation">
          <button id="tabpanel-<%= network.name.parameterize %>"
                  class="fr-tabs__tab fr-icon-question-answer-line fr-tabs__tab--icon-left"
                  tabindex="-1" role="tab"
                  aria-selected="false"
                  aria-controls="tabpanel-<%= network.name.parameterize %>-panel">
            <%= network.name %>
          </button>
        </li>
      <% end %>
    </ul>



    <%= render 'info_panel' %>

    <!-- User Networks Panels -->
    <% current_user.active_networks.each do |network| %>
      <div id="tabpanel-<%= network.name.parameterize %>-panel"
           class="fr-tabs__panel"
           role="tabpanel"
           aria-labelledby="tabpanel-<%= network.name.parameterize %>"
           tabindex="0">

        <div class="fr-grid-row fr-grid-row--gutters">
          <div class="fr-col-8">
            <div class="fr-mb-3w">
              <%= turbo_frame_tag "#{network.name.parameterize}_summary" do %>
                <% summaries = network.name.downcase == 'codefi' ? @codefi_summaries : @user_network_summaries %>
                <% if summaries.present? %>
                  <%= render summaries %>
                <% else %>
                  <% if policy(@establishment_tracking).edit? %>
                    <%= render "summaries/form", summary: Summary.new(network: network), network: network %>
                  <% else %>
                    <div class="fr-ml-3w">
                      <h4>Synthèse</h4>
                      <p>Aucune synthèse pour ce réseau.</p>
                    </div>
                  <% end %>
                <% end %>
              <% end %>
            </div>

            <div class="fr-pl-3w">
              <h4>Commentaires</h4>

              <% if policy(@establishment_tracking).edit? %>
                <%= turbo_frame_tag "new_comment_#{network.name.parameterize}" do %>
                  <%= render "comments/form", comment: Comment.new(network: network), network: network %>
                <% end %>
              <% end %>

              <div class="fr-mt-4w">
                <div id="comments_<%= network.name.parameterize %>">
                  <%= turbo_frame_tag "comments_#{network.name.parameterize}" do %>
                    <% comments = network.name.downcase == 'codefi' ? @codefi_comments : @user_network_comments %>

                    <% if comments.any? %>
                      <% comments.each do |comment| %>
                        <%= render "comments/comment", comment: comment %>
                      <% end %>
                    <% else %>
                      <p id="no_comments_message_<%= network.name.parameterize %>">Il n'y a pas encore de commentaires
                        pour ce suivi</p>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="fr-container--fluid">
    <div class="fr-grid-row">
      <div class="fr-col-12">
        <div class="fr-m-4w">
          <h3>Tous les accompagnements de l'entreprise <%= @establishment.company.siren %></h3>
          <div class="fr-table" id="table-md-component">
            <div class="fr-table__wrapper">
              <div class="fr-table__container">
                <div class="fr-table__content">
                  <table id="table-md">
                    <% if @company_trackings.any? %>
                      <thead>
                      <tr>
                        <th>Raison sociale</th>
                        <th>SIRET</th>
                        <th>Statut</th>
                        <th>Criticité</th>
                        <th>Assignés</th>
                        <th>Dernière modification</th>
                        <th>Dépt.</th>
                        <th>Actions</th>
                      </tr>
                      </thead>
                      <tbody>
                      <% @company_trackings.each do |tracking| %>
                        <tr>
                          <td>
                    <span title="<%= tracking.establishment.raison_sociale %>">
                      <%= tracking.establishment.raison_sociale.truncate(20) %>
                    </span>
                          </td>
                          <td><%= tracking.establishment.siret %></td>
                          <td><%= content_tag :p, tracking.aasm.human_state, class: badge_class_for(tracking.aasm.human_state) %></td>
                          <td>
                            <% if tracking.criticality.present? %>
                              <%= content_tag :p, tracking.criticality.name, { class: badge_class_for(tracking.criticality.name), style: paragraph_style_for(tracking.criticality.name) } %>
                            <% end %>
                          </td>
                          <td>
                            <% if tracking.referents.any? %>
                              <% first_referent = tracking.referents.first %>
                              <span title="<%= tracking.referents.map(&:full_name).join(', ') %>">
                                <%= truncate(first_referent.full_name, length: 20) %>
                              </span>
                              <% if tracking.referents.size > 1 %>
                                <span>+<%= tracking.referents.size - 1 %></span>
                              <% end %>
                            <% else %>
                              <span>Aucun assigné</span>
                            <% end %>
                          </td>
                          <td><%= tracking.modified_at.present? ? l(tracking.modified_at, format: :default) : '-' %></td>
                          <td><%= tracking.establishment.department.code %></td>
                          <td>
                            <% if policy(tracking).show? %>
                              <%= link_to 'Consulter', [tracking.establishment, tracking], class: 'fr-link fr-icon-arrow-right-line fr-link--icon-right' %>
                            <% else %>
                            <span>-</span>
                            <% end %>
                          </td>
                        </tr>
                      <% end %>
                      </tbody>
                    <% end %>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
