<div class="fr-container">
  <div class="fr-col-12 fr-col-sm-10 fr-col-md-8">
    <h1>Gérer les contributeurs de l'accompagnement</h1>
    <%= form_with(model: [@establishment, @establishment_tracking], url: update_contributors_establishment_establishment_tracking_path(@establishment, @establishment_tracking), method: :patch, local: true) do |form| %>
      <% if @establishment_tracking.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@establishment_tracking.errors.count, "erreur") %> :</h2>
          <ul>
            <% @establishment_tracking.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="fr-input-group">
        <%= form.label :referent_ids do %>
          Référents
          <span class="fr-hint-text">Saisissez au moins 3 caractères</span>
      <% end %>
        <%= form.collection_select :referent_ids, User.kept, :id, :display_name, {}, { multiple: true, class: 'tom-select', autocomplete: "off", data: { controller: "tom-select", min_search: "3" } } %>
      </div>

      <div class="fr-input-group">
        <%= form.label :participant_ids do %>
          Participants
          <span class="fr-hint-text">Saisissez au moins 3 caractères</span>
        <% end %>
        <%= form.collection_select :participant_ids, User.kept, :id, :display_name, {}, { multiple: true, class: 'tom-select', data: { controller: "tom-select", min_search: "3" } } %>
      </div>

      <ul class="fr-btns-group fr-btns-group--inline-md">
        <li>
          <%= form.submit 'Mettre à jour les contributeurs', class: 'fr-btn' %>
        </li>
        <li>
          <%= link_to 'Annuler', establishment_establishment_tracking_path(@establishment, @establishment_tracking), class: 'fr-btn fr-btn--secondary' %>
        </li>
      </ul>
    <% end %>
  </div>
</div>