<div class="fr-container">
  <div class="fr-col-12 fr-col-sm-10 fr-col-md-8">
    <h1>Modifier l'accompagnement pour <%= @establishment.siret %></h1>
      <%= form_with(model: [@establishment, @establishment_tracking], local: true) do |form| %>
        <% if @establishment_tracking.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@establishment_tracking.errors.count, "erreur") %> lors de la modification de cet accompagnement :</h2>
            <ul>
              <% @establishment_tracking.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="fr-input-group">
          <%= form.label :state, 'Statut' %>
          <%= form.select :state, options_for_select([['En cours', 'in_progress'], ['Complété', 'completed'], ['Sous surveillance', 'under_surveillance']], @establishment_tracking.state), {}, { class: 'fr-select' } %>
        </div>

        <div class="fr-input-group">
          <%= form.label 'Assignés' %>
          <%= form.collection_select :referent_ids, User.all, :id, :full_name, {}, { multiple: true, class: 'tom-select', data: { controller: "tom-select" } } %>
        </div>

        <div class="fr-input-group">
          <%= form.label :Participants %>
          <%= form.collection_select :participant_ids, User.all, :id, :full_name, {}, { multiple: true, class: 'tom-select', data: { controller: "tom-select" } } %>
        </div>

        <div class="fr-input-group">
          <%= form.label :tracking_label_ids, 'Étiquettes' %>
          <%= form.collection_select :tracking_label_ids, TrackingLabel.all, :id, :name, {}, { multiple: true, class: 'tom-select', data: { controller: "tom-select" } } %>
        </div>

        <div class="fr-input-group">
          <%= form.label :action_ids, 'Actions' %>
          <%= form.collection_select :action_ids, Action.all, :id, :name, {}, { multiple: true, class: 'tom-select', data: { controller: "tom-select" } } %>
        </div>

        <%= form.submit 'Mettre à jour l\'accompagnement', class: 'fr-btn' %>
      <% end %>
      <div class="fr-mt-2w">
        <%= link_to 'Annuler', establishment_establishment_tracking_path(@establishment, @establishment_tracking), class: 'fr-btn fr-mt-2w' %>
      </div>
  </div>
</div>