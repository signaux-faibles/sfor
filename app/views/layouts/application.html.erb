<!DOCTYPE html>
<html>
  <head>
    <title>SignauxFaiblesV2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <% if user_signed_in? %>
    <%= render 'layouts/header' %>
  <% end %>
  <%= link_to "Signin", new_user_session_path, data: { turbo_method: :post } %>

  <%= form_tag user_openid_connect_omniauth_authorize_path, method: :post do %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= submit_tag "Login with OpenID Connect" %>
  <% end %>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <main class="fr-container fr-pt-4w">
      <%= yield %>
    </main>
  </body>
</html>
